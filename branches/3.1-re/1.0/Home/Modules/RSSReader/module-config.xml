<?xml version="1.0" encoding="UTF-8"?>
<catalog>
	<path>/Home/Modules/RSSReader/</path>
	<cacheDir>/RSSReaderCache</cacheDir>
<modules>
	<!-- ********   RSS Reader  ************ -->
	<module access="general" id="rssReader" name="RSSReader/RSSReader">
		<description>
			Displays content from RSS and Atom feeds. You may select to display the feed contents in the same module
			or send them to another module such as a Panel module.
		</description>
		<resources>
			<resource href="/Home/Modules/RSSReader/RSSReader.js" type="script"/>
		</resources>		
		<attributes>
			<attribute description="RSS URL" name="rss" required="true"/>
			<attribute default="" description="Display Contents In" name="targetID" required="false"/>
			<attribute description="Number of Items to Display" name="maxItems" required="true"/>
		</attributes>
		<eventListeners>
			<event eventHandler="$ID$.getFeed" eventName="PageLoaded" objectName="Framework"/>
		</eventListeners>
	</module>	
</modules>
</catalog>
<?xml version="1.0" encoding="UTF-8"?>
<homePortals version="3.1.269">

	<!-- base path for the HomePortals installation -->
	<homePortalsPath>/Home/</homePortalsPath>

	<!-- Directory where HomePortals will look for resources  -->
	<resourceLibraryPath>/Home/resourceLibrary/</resourceLibraryPath>

	<!-- base path for the current application -->
	<appRoot>/Home/</appRoot>

	<!-- Directory where content pages will be stored -->
	<contentRoot>/Home/Accounts/</contentRoot>

	<!-- HomePortals page to load when no page has been provided -->
	<defaultPage></defaultPage>

	<!-- Event raised when a HomePortals page finishes loading -->
	<initialEvent>Framework.onPageLoaded</initialEvent>

	<!-- layout section names -->
	<layoutSections>header,column,footer</layoutSections>

	<!-- The maximum number of homeportals pages to cache at any given time -->
	<pageCacheSize>50</pageCacheSize>

	<!-- The maximum amount in minutes before an unchanged page is expelled from the cache. -->
	<pageCacheTTL>60</pageCacheTTL>

	<!-- The maximum number of items to hold in the content cache -->
	<contentCacheSize>50</contentCacheSize>

	<!-- Default TTL in minutes for content items on the content cache. This can be overriden for individual entries. -->
	<contentCacheTTL>60</contentCacheTTL>

	<!-- The maximum number of items to hold in the rss feeds cache -->
	<contentCacheSize>50</contentCacheSize>

	<!-- Default TTL in minutes for rss feeds on the rss cache.  -->
	<contentCacheTTL>60</contentCacheTTL>

	<!-- Path in dot notation for the class responsible for storing/retrieving HomePortals pages -->
	<pageProviderClass>Home.Components.defaultPageProvider</pageProviderClass>

	<!-- List with allowed types of base resources -->
	<baseResourceTypes>script,style,header,footer</baseResourceTypes>
	
	<!-- The following resources are included in every page rendered. -->
	<baseResources>
		<resource href="/Home/Common/CSS/Main.css" type="style"/>
		<resource href="/Home/Common/JavaScript/prototype-1.4.0.js" type="script"/>
		<resource href="/Home/Common/JavaScript/Main.js" type="script"/>
		<resource href="/Home/Common/JavaScript/moduleClient.js" type="script"/>
	</baseResources>

	<!-- The following templates determine how homeportals will render the html content -->
	<renderTemplates>
		<renderTemplate type="module" href="/Home/Common/Templates/Render/module.xml" />
		<renderTemplate type="moduleNoContainer" href="/Home/Common/Templates/Render/moduleNoContainer.xml" />
		<renderTemplate type="page" href="/Home/Common/Templates/Render/page.xml" />
	</renderTemplates>
	
	<!-- The following are the different types of modules or content renderers that will be supported on a page -->
	<contentRenderers>
		<contentRenderer moduleType="content" path="Home.Components.contentTagRenderers.content" />
		<contentRenderer moduleType="module" path="Home.Components.contentTagRenderers.module" />
		<contentRenderer moduleType="view" path="Home.Components.contentTagRenderers.view" />
	</contentRenderers>
	
</homePortals>
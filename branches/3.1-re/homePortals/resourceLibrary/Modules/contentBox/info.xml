<?xml version="1.0" encoding="UTF-8"?>
<catalog package="Content">
    <modules>
        <!-- ********   contentBox  ************ -->
        <module access="general" id="contentBox" name="contentBox/contentBox">
            <description>
                Displays a content entry from the content library
            </description>
			<attributes>
				<attribute name="resourceID" 
							required="true"
							description="The resource ID of the content snippet to add to the page."
							type="resourceOnly"
							resourceType="content"
							resourceField="ID" />
			</attributes>
            <moduleInfo>
                <authorName>Oscar Arevalo</authorName>
                <authorEmail>oarevalo@gmail.com</authorEmail>
                <authorURL>http://www.homeportals.com</authorURL>
                <screenshot/>
            </moduleInfo>
			<api />
        </module>	

        <!-- ********   htmlBox  ************ -->
        <module access="general" id="htmlBox" name="contentBox/htmlBox">
            <description>
                Displays an HTML snippet from the resource library
            </description>
			<attributes>
				<attribute name="resourceID" 
							required="true"
							description="The resource ID of the html snippet to add to the page."
							type="resourceOnly"
							resourceType="html"
							resourceField="ID" />
			</attributes>
            <moduleInfo>
                <authorName>Oscar Arevalo</authorName>
                <authorEmail>oarevalo@gmail.com</authorEmail>
                <authorURL>http://www.homeportals.com</authorURL>
                <screenshot/>
            </moduleInfo>
			<api />
        </module>	

      </modules>
</catalog>
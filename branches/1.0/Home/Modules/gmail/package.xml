<?xml version="1.0" encoding="UTF-8"?>
<catalog>
<modules>
	<!-- ********   GMail  ************ -->
	<module access="general" id="gmail" name="GMail/GMail">
		<description>
			Displays most recent emails from a gmail account.
		</description>
		<attributes>
			<attribute description="gmail account" name="username" required="true"/>
			<attribute description="your password" name="password" required="true"/>
			<attribute default="5" description="number of items to display" name="numItems" required="false"/>
		</attributes>
		<resources>
			<resource href="/home/modules/gmail/gmail.js" type="script"/>
		</resources>		
		<eventListeners>
			<event eventHandler="$ID$.getMail" eventName="PageLoaded" objectName="Framework"/>
		</eventListeners>		
	</module>
</modules>
</catalog>
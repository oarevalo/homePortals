<?xml version="1.0" encoding="UTF-8"?>
<homePortals version="2.0">
	
	<!-- base path for the HomePortals installation -->
	<homePortalsPath>/Home/</homePortalsPath>
	
	<!-- Default directory where HomePortals will look for modules,
		unless a relative path or external URL is given in
		the Name attribute of a module -->
	<moduleLibraryPath>Home.Modules.</moduleLibraryPath>
	
	<!-- Event raised when a HomePortals page finishes loading -->
	<initialEvent>Framework.onPageLoaded</initialEvent>
	
	<!-- layout section names -->
	<layoutSections>header,column,footer</layoutSections>
	
	<!-- HomePortals account to load when no page has been provided -->
	<defaultAccount>default</defaultAccount>
	
	<!-- SSLRoot is the root path to be prepended to all page calls when using HTTPS -->
	<SSLRoot>/</SSLRoot>
	
	<!-- The following resources are included in every page rendered.
		valid types for the Type attribute are: style, script, header and footer
	-->
	<baseResources>
		<resource href="/Home/Common/JavaScript/prototype-1.4.0.js" type="script"/>
		<resource href="/Home/Common/JavaScript/Main.js" type="script"/>
		<resource href="/Home/Modules/Accounts/controlPanel.js" type="script"/>
		<resource href="/Home/Common/JavaScript/moduleClient.js" type="script"/>
		<resource href="/Home/Common/CSS/Main.css" type="style"/>
		<resource href="/Home/Modules/Accounts/siteMap.css" type="style"/>
		<resource href="/Home/Modules/Accounts/siteMap.cfm" type="header"/>
		<resource href="/Home/Common/Templates/footer.cfm" type="footer"/>
	</baseResources>
	
</homePortals>

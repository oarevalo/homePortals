<?xml version="1.0" encoding="UTF-8"?>
<homePortals version="3.0">

	<!-- base path for the current application -->
	<appRoot>/xilya/</appRoot>

	<!-- Directory where HomePortals will look for resources  -->
	<resourceLibraryPath>/Home/resourceLibrary</resourceLibraryPath>

	<!-- Directory where account files are stored -->
	<accountsRoot>/accounts</accountsRoot>

	<!-- HomePortals account to load when no page has been provided -->
	<defaultAccount>default</defaultAccount>

	<!-- The following resources are included in every page rendered. -->
	<baseResources>
		<resource href="/xilya/includes/controlPanel.js" type="script"/>
		<resource href="/xilya/includes/styles/xilya.css" type="style"/>
		<resource href="/xilya/includes/styles/skin.css" type="style"/>
		<resource href="/xilya/includes/header.cfm" type="header"/>
		<resource href="/xilya/includes/sidePanel.cfm" type="header"/>
		<resource href="/xilya/includes/footer.cfm" type="footer"/>
		<resource href="/xilya/includes/scripts/coordinates.js" type="script" />
		<resource href="/xilya/includes/scripts/drag.js" type="script" />
		<resource href="/xilya/includes/scripts/dragdrop.js" type="script" />
	</baseResources>

</homePortals>

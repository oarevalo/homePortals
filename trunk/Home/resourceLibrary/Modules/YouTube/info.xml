<?xml version="1.0" encoding="UTF-8"?>
<catalog package="Internet">
    <modules>
        <!-- ********   youTubeVideo  ************ -->
        <module access="general" id="youTubeVideo" name="YouTube/youTubeVideo">
            <description>
                Displays a video from YouTube.com
            </description>
            <attributes>
                <attribute name="videoID" description="ID of the video" default="" />
            </attributes>
            <moduleInfo>
                <authorName>Oscar Arevalo</authorName>
                <authorEmail>oarevalo@gmail.com</authorEmail>
                <authorURL>http://www.homeportals.com</authorURL>
                <screenshot/>
            </moduleInfo>
			<api>
				<methods>
					<method name="showVideo" description="Retrieves and displays the given video." /> 
				</methods>
				<events />
			</api>
        </module>	

       <!-- ********   youTubeSearch  ************ -->
        <module access="general" id="youTubeSearch" name="YouTube/youTubeSearch">
            <description>
                Search videos by tag
            </description>
            <attributes>
                <attribute name="term" description="Search term" default="" />
                <attribute name="resultsPanelID" description="The panel where to display the video. If empty, video will be displayed on youTube website" default="" />
            </attributes>
            <moduleInfo>
                <authorName>Oscar Arevalo</authorName>
                <authorEmail>oarevalo@gmail.com</authorEmail>
                <authorURL>http://www.homeportals.com</authorURL>
                <screenshot/>
            </moduleInfo>
			<api>
				<methods>
					<method name="search" description="Searches for videos" /> 
				</methods>
				<events>
					<event name="onSelectVideo" description="Raised whenever a video is selected from the search results" />
				</events>
			</api>
        </module>	


    </modules>
</catalog>